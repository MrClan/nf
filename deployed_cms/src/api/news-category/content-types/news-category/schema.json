{
  "kind": "collectionType",
  "collectionName": "news_categories",
  "info": {
    "singularName": "news-category",
    "pluralName": "news-categories",
    "displayName": "News Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-article.news-article",
      "mappedBy": "category"
    }
  }
}

