{
  "kind": "collectionType",
  "collectionName": "publication_categories",
  "info": {
    "singularName": "publication-category",
    "pluralName": "publication-categories",
    "displayName": "Publication Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "publications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::publication.publication",
      "mappedBy": "category"
    }
  }
}

