{
  "kind": "collectionType",
  "collectionName": "educational_materials",
  "info": {
    "singularName": "educational-material",
    "pluralName": "educational-materials",
    "displayName": "Educational Material"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "video",
        "manual",
        "kit",
        "poster",
        "guide"
      ]
    },
    "file": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "json"
    }
  }
}

